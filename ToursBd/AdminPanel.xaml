                                <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding Surname}"  Width="100" />
                                <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Роль" DisplayMemberBinding="{Binding RoleID}"/>
                            </GridView>
                        </ListView.View>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Style.Triggers>
                                    <Trigger Property="IsSelected"
                            Value="True">
                                        <Setter Property="Background"
                            Value="{x:Null}" />
                                        <Setter Property="BorderBrush"
                            Value="{x:Null}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                    <StackPanel  HorizontalAlignment="Left" Height="149" Margin="423,10,0,0" VerticalAlignment="Top" Width="270">
                        <Grid Height="160" Margin="0,0,-42,0">
                            <TextBlock HorizontalAlignment="Left" Margin="10,6,0,0" TextWrapping="Wrap" TextAlignment="Center" FontFamily="Roboto" FontSize="16" Text="Поиск" Foreground="#FFF57E68" VerticalAlignment="Top" Width="94"/>
                            <TextBox x:Name="Login"   FontSize="16" Foreground="#FFF57E68" Margin="10,30,102,105" Width="200" Height="25" TextChanged ="Login_TextChanged" PreviewMouseDown="Login_PreviewMouseDown" BorderBrush="#FFF57E68" Background="#FF303030"/>
                            <TextBox x:Name="Sur_Name"  FontSize="16" Foreground="#FFF57E68" Margin="10,70,102,65" Width="200" Height="25" TextChanged ="Sur_Name_TextChanged"  PreviewMouseDown = "Sur_Name_PreviewMouseDown" Background="#FF303030" BorderBrush="#FFF57E68"/>
