                        <Grid Height="160" Margin="0,0,-42,0">
                            <TextBlock HorizontalAlignment="Left" Margin="10,6,0,0" TextWrapping="Wrap" TextAlignment="Center" FontFamily="Roboto" FontSize="16" Text="Поиск" Foreground="#FFF57E68" VerticalAlignment="Top" Width="94"/>
