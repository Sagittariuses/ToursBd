                    </Button>
                    <Button x:Name="RefreshTourist" Content="Обновить всё" HorizontalAlignment="Left" Margin="590,459,0,0" Background="#FFF57E68"  FontFamily="Roboto" FontSize="16"  BorderBrush="#FFA85648" VerticalAlignment="Top" Width="172" Click="Refresh_Click"   Height="29" Visibility="Hidden">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                </Grid>
            </TabItem>

            <TabItem x:Name="Vouchers" Header="Путёвки" BorderBrush="#FFF57E68" Background="#FF303030" Margin="9,-1,-9,-1" FontFamily="Roboto" Width="102" >
                <Grid Background="#FF303030" Margin="0,0,-1,-3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="61*"/>
                        <ColumnDefinition Width="883*"/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="VouchersLV" HorizontalAlignment="Left" Height="493" Margin="10,10,0,0" VerticalAlignment="Top" Width="190"  Background="#303030" BorderBrush="#FFF57E68" Foreground="White" Grid.ColumnSpan="2" >
