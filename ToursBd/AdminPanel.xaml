                            <TextBox x:Name="TourSeason"  FontSize="16" Foreground="#FFF57E68" Margin="10,30,102,105" Width="200" Height="25" TextChanged ="TourSeason_TextChanged" PreviewMouseDown="TourSeason_PreviewMouseDown" BorderBrush="#FFF57E68" Background="#FF303030"/>
