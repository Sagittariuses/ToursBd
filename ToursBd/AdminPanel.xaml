                            <Border CornerRadius="7" BorderBrush="#FFF57E68" BorderThickness="1" UseLayoutRounding="True" Margin="0, 0,87,11"/>
                        </Grid>
                    </StackPanel>
                    <Button x:Name="AddTour" Foreground="#303030" Content="Добавить" HorizontalAlignment="Left" Margin="609,189,0,0" Background="#FFF57E68"  FontFamily="Roboto" FontSize="16"  BorderBrush="#FFA85648" VerticalAlignment="Top" Width="172" Height="29" Click="AddTour_Click" >
