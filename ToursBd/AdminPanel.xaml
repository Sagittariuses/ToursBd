                            <Border CornerRadius="7" BorderBrush="#FFF57E68" BorderThickness="1" UseLayoutRounding="True" Margin="0, 0,87,11"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel  HorizontalAlignment="Left" Height="149" Margin="360,293,0,0" VerticalAlignment="Top" Width="270">
                        <Grid Height="160" Margin="0,0,-42,0">
