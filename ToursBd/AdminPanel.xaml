                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="DeleteUser" Content="Удалить" HorizontalAlignment="Left" Margin="423,257,0,0" Foreground="#FF303030" Background="#FFF57E68"  FontFamily="Roboto" FontSize="16"  BorderBrush="#FFA85648" VerticalAlignment="Top" Width="172" Click="DeleteUser_Click"   Height="29">
