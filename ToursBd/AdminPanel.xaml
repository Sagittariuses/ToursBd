                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem x:Name="Tours" Header="Туры" BorderBrush="#FFF57E68" Background="#FF303030" Margin="8,-1,-8,-1" FontFamily="Roboto" Width="102" >
