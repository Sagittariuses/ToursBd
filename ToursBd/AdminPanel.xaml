                            <TextBox x:Name="City"  FontSize="16" Foreground="#FFF57E68" Margin="10,109,102,26" Width="200" Height="25" TextChanged="City_TextChanged"  PreviewMouseDown = "City_PreviewMouseDown" Background="#FF303030" BorderBrush="#FFF57E68"/>
                            <TextBlock x:Name="CityPlaceholder" HorizontalAlignment="Left" Margin="-16,110,0,0" TextWrapping="Wrap" TextAlignment="Center" FontFamily="Roboto" FontSize="16" Text="Город" Foreground="LightGray" VerticalAlignment="Top" Width="102"/>
                            <TextBlock x:Name="PhonePlaceholder" HorizontalAlignment="Left" Margin="2,71,0,0" TextWrapping="Wrap" TextAlignment="Center" FontFamily="Roboto" FontSize="16" Text="Номер телефона" Foreground="LightGray" VerticalAlignment="Top" Width="148"/>
