                        </Grid>
                    </StackPanel>



                    <Button x:Name="AddTourist" Foreground="#303030" Content="Добавить" HorizontalAlignment="Left" Margin="10,459,0,0" Background="#FFF57E68"  FontFamily="Roboto" FontSize="16"  BorderBrush="#FFA85648" VerticalAlignment="Top" Width="172" Height="29" Click="AddTourist_Click" >
